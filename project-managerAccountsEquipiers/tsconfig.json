{
  "compilerOptions": {
    "target": "es2023",                // Version JS supportée par le moteur V8 de GAS
    "module": "nodenext",                  // GAS n’accepte pas les modules (tout doit être global)
    "outDir": "./build",               // Dossier où le JS compilé sera placé pour clasp
    "moduleResolution": "nodenext",
    "esModuleInterop": false,          // Pas d'import/export Node, donc inutile
    "isolatedModules": false,          // Pas nécessaire car pas de modules
    "verbatimModuleSyntax": false,     // Inutile sans modules
    "resolveJsonModule": false,        // JSON import = pas supporté dans GAS
    "declaration": true,               // Génère des .d.ts (utile si ton projet est une lib)
    "isolatedDeclarations": true,      // Force un typage strict des fonctions publiques
    "sourceMap": true,                 // Permet le debug avec maps (utile si erreur côté GAS)
    "inlineSources": true,             // Inclut les sources TypeScript dans la sourcemap
    "sourceRoot": "/",                 // Point de base pour retrouver les sources (optionnel)
    "skipLibCheck": true,              // Ignore les erreurs dans les définitions de types
    "strict": true,                    // Active toutes les vérifications strictes
    "noUncheckedIndexedAccess": true,  // Accès aux tableaux/maps doit être vérifié
    "noImplicitReturns": true,         // Force un return explicite dans les fonctions
    "useUnknownInCatchVariables": false, // Catch utilise "any" au lieu de "unknown"
    "noErrorTruncation": true,         // Affiche les erreurs TypeScript complètes
    "lib": [
      "ES2023"                         // Bibliothèque de base adaptée à GAS (sans DOM)
    ]
  },
  "include": ["src/**/*.ts"]           // Ton code source est dans src/
}